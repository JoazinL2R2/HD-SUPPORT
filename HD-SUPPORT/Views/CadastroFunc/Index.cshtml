@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Acessor

@model IEnumerable<HD_SUPPORT.Models.CadastroUser>

@{
    ViewData["Title"] = "Funcionarios";
}
@section Header{
    <header>
        <div class="logo_bne">
            <img src="~/images/logo_bne.png" alt="">
        </div>
        <div class="icon_menu" onclick="toggleMenu()">
            <img src="~/images/menu_icon.png" alt="">
        </div>
        <div class="side-menu" id="sideMenu">
            <div class="close_menu">
                <img src="~/images/9110796_x_icon.png" alt="" width="40px">
            </div>
            @if (Acessor.HttpContext.Session.GetString("profissional") == "HelpDesk")
            {
                <a class="dropdown-item" asp-controller="Emprestimo" asp-action="Index">Tabela Emprestimos</a>
            }
            <a class="dropdown-item" asp-controller="CadastroEquip" asp-action="Index">Tabela Equipamentos</a>
            <a class="dropdown-item" asp-controller="CadastroFunc" asp-action="Index">Tabela Funcionarios</a>
            <div>
                @if (Acessor.HttpContext.Session.GetString("nome") != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Acessor.HttpContext.Session.Get("foto"))" width="50" height="50">
                    @Acessor.HttpContext.Session.GetString("nome")
                    <a class="dropdown-item" asp-area="" asp-controller="CadastroHelpDesk" asp-action="Perfil">Perfil</a>
                }
            </div>
            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut">Sair</a>
        </div>
    </header>

}
<head>

    <link rel="stylesheet" href="~/css/Tebela.css" />
    <link rel="stylesheet" href="~/css/Modals.css" />
</head>

<div class="align-content-center">
    <div class="TableContainer">
        <div class="table-menu">
            <form asp-action="Index" asp-controller="CadastroFunc">
                <a role="button">
                    <i class="bi bi-search"></i>
                </a>
                <input type="search" placeholder="Faça sua pesquisa" name="SearchString">
            </form>
            <span>
                <a asp-action="Index">
                    <i class="bi bi-x-lg"></i>
                </a>
            </span>       
        </div>
        <table id="table-position" class="table table-hover">
            <thead class="thead-style">
                <tr class="tr-style">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telegram)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>

                    <th scope="col">
                        <div class="button-add">
                            <button type="button" class="BtnNovoCadastro">
                                Adicionar
                            </button>
                        </div>

                    </th>
                </tr>
            </thead>
            <tbody>
               
                    @foreach(var item in Model)
                    {
                    <tr class="tbody-style">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telegram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria)
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" Funcionario-id="@item.Id" class="btn btn-primary BtnEditar">
                                    <i class="bi bi-pencil-square"></i>
                                </button>


                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="@("#DetalhesFuncModal" + item.Id.ToString())" data-bs-url="@Url.Action($"Detalhes/{item.Id}")">
                                    <i class="bi bi-newspaper"></i>
                                </button>

                                @await Html.PartialAsync("_DetalhesFuncPartialView", item)

                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#DeleteFuncModal" + item.Id.ToString())" data-bs-url="@Url.Action($"Delete/{item.Id}")">
                                    <i class="bi bi-trash-fill"></i>
                                </button>

                                @await Html.PartialAsync("_ExcluirFuncPartialView", item)
                            </div>

                        </td>
                    </tr>
                    } 
                
            </tbody>
        </table>



        <div class="pagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#"><i class="bi bi-arrow-left"></i></a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="bi bi-arrow-right"></i></a></li>
                </ul>
            </nav>
        </div>
        /*Erro Model*/
        <div class="modal fade" id="ModelErro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Erro</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="ModelErro">
                            <p>@TempData["ErroAtualizacao"]</p>
                        </div>
                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
        /*Edit Model*/
        <div class="modal fade" id="EditarFuncModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="ModalEditar">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="NovoCadastroFuncModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar Novo Funcionario</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="ModalNovoCadastro">

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

    @section Scripts {
        <script src="~/js/jquery.inputmask.js"></script>
        <script>

                $(document).ready(function () {
                    

                    var erroAtualizacao = "@TempData["ErroAtualizacao"]";
                    var funcionarioId;

                    if (erroAtualizacao) {
                        setTimeout(function () {
                            $('#ModelErro').modal('show');
                        }, 100);
                    }

                    $('.BtnEditar').click(function () {
                        funcionarioId = $(this).attr('Funcionario-id');
                        abrirModalEditar(funcionarioId);
                    });


                    $('.BtnNovoCadastro').click(function () {
                        abrirModalNovoCadastro();
                    });

                    function abrirModalEditar(id) {
                        $.ajax({
                            type: 'GET',
                            url: '/CadastroFunc/Edit/' + id,
                            success: function (result) {
                                $("#ModalEditar").html(result);
                                $('#EditarFuncModal').modal('show');
                                $(".telefone").inputmask('(99) 99999-9999');
                            }
                        });
                    }

                    function abrirModalNovoCadastro() {
                        $.ajax({
                            type: 'GET',
                            url: '/CadastroFunc/NovoCadastro',
                            success: function (result) {
                                $("#ModalNovoCadastro").html(result);
                                $('#NovoCadastroFuncModal').modal('show');
                                $(".telefone").inputmask('(99) 99999-9999');
                            }
                        });
                    }
                });
        </script>
    }


    
    