@model IEnumerable<HD_SUPPORT.Models.CadastroUser>

@{
    ViewData["Title"] = "Index";
}
<div class="align-content-center">
    <h1>Funcionarios</h1>
    <table class="table" id="tabela">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telegram)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPatrimonio)
                </th>
                <th>
                    <a type="button" class="btn btn-primary" asp-action="NovoCadastro">CADASTRAR FUNCIONARIOS</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telegram)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPatrimonio)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"> Editar</button>
                            <button type="button" class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</button>
                            <button type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

