@model HD_SUPPORT.Models.CadastroUser
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/video.css">
    <link rel="stylesheet" href="~/css/CadastroFuncLogin.css">
</head>
<body>
    <div class="content-stars">
        <video src="~/images/pexels_videos_2792967 (1440p).mp4" autoplay loop muted></video>
    </div>
    <div class="container">
        <div class="content-login">
            <div class="content-left">
                <div class="content-form-primary">
                    <div class="form-content">
                        <div class="text-content">
                            <h1>Cadastrar-se</h1>

                        </div>
                        <form id="novocadastro-form" asp-action="NovoCadastro">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                      
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" id="EmailInputFunc" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                     
                            <label asp-for="Telegram" id="control-label" class="control-label">Telegram</label>
                            <input asp-for="Telegram" class="form-control telefone" />
                            <span asp-validation-for="Telegram" class="text-danger"></span>

                            <label asp-for="Telefone" id="control-label" class="control-label">Telefone</label>
                            <input asp-for="Telefone" class="form-control telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>

                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" placeholder="Cargo na empresa" />
                            <span asp-validation-for="Status" class="text-danger"></span>

                            <label asp-for="Categoria" class="categoria"></label>
                            <select name="categoria" id="categorias">
                                <option id="option" value="HomeOffice">
                                    Home-Office
                                </option>
                                <option id="option" value="Presencial">
                                    Presencial
                                </option>
                                <option id="option" value="Hibrido">
                                    Hibrido
                                </option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>

                            <br />
                            <div class="position-button">


                                <div class="btn-login" id="btn-login">
                                    <a id="LoginCadastroFunc">Cadastrar</a>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="content-right">
                <img src="~/images/msg5916651316-1528.jpg" alt="">
            </div>
        </div>
    </div>

    <div class="modal" id="NovoCadastroFuncLoginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="ModalVerificacaoCadastro">
                        <form asp-action="VerificacaoEmail" asp-controller="CadastroFunc" method="post">
                            <img src="~/images/gmail.png" height="50px" />
                            <h1>Verifique o seu email</h1>
                                <p>Vefifique o código em sua caixa de mensagens</p>
                            <input type="text" placeholder="Digite o código" id="inputCodigo" />
                            <br />
                            <a role="button" class="btn" id="btnVerificarCodigo">Verificar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalSucesso" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sucesso :)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="Modelsucesso">
                        Cadastro Criado com Sucesso!
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalErro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Erro :(</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="ModelErro">
                        Codigo vazio ou invalido, tente novamente
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/jquery.inputmask.js"></script>
    <script>
        $(document).ready(function () {
            $(".telefone").inputmask('(99) 99999-9999');
            console.log("Script carregado");
            var erroAtualizacao = "@TempData["ErroAtualizacao"]";
            if (erroAtualizacao) {
                setTimeout(function () {
                    $('#ModelErro').modal('show');
                }, 1000);
            }
            $('#NovoCadastroFuncLoginModal').modal({
                keyboard: false,
                backdrop: 'static'
            });

            $('#LoginCadastroFunc').click(function () {
                console.log("btn clicado");
                var email = $('#EmailInputFunc').val();
                window.emailTemporario = email;
                modalVerificacao();
            });
            $('#btnVerificarCodigo').click(function (event) {
                event.preventDefault();
                var codigo = $('#NovoCadastroFuncLoginModal #inputCodigo').val();
                window.codigoInput = codigo;
                console.log('Código de verificação: ', codigo);
                verificarCodigo();
            });
            function modalVerificacao() {
                var emailTemporario = window.emailTemporario;
                $.ajax({
                    type: 'POST',
                    url: '/CadastroFunc/EnviarEmail',
                    data: { email: emailTemporario },
                    success: function (result) {
                        console.log('EnviarEmail success:', result);
                        $('#NovoCadastroFuncLoginModal').modal('show');
                    },
                    error: function () {
                        console.error('VerificacaoEmail error');
                    }
                });
            }
            function verificarCodigo() {
                var codigoInput = window.codigoInput;
                console.log('Dados do formulário:', $('#novocadastro-form').serialize());

                $.ajax({
                    type: 'POST',
                    url: '/CadastroFunc/VerificacaoEmail',
                    data: { codigoVerificacao: codigoInput },
                    success: function (result) {
                        console.log('VerificacaoCodigo sucesso');
                        if (result.success) {
                            document.getElementById('novocadastro-form').submit();
                            console.log('FormEnviado sucesso');
                            $('#NovoCadastroFuncLoginModal').modal('hide')
                            $('#modalSucesso').modal(`show`);

                        } else {
                            console.log('Código de verificação incorreto');
                            $('#NovoCadastroFuncLoginModal').modal('hide')
                            $('#modalErro').modal(`show`);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error('VerificacaoCodigo error:', textStatus, errorThrown);
                    }
                });
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


