@model HD_SUPPORT.Models.EmprestimoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EquipamentoId" />
            <div class="form-group">
                <label asp-for="Equipamento.IdPatrimonio" class="control-label"></label>
                <input asp-for="Equipamento.IdPatrimonio" class="form-control" />
                <span asp-validation-for="Equipamento.IdPatrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Email" class="control-label"></label>
                <input asp-for="Funcionario.Email" class="form-control" />
                <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
