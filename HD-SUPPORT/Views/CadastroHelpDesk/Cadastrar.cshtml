@model HD_SUPPORT.Models.CadastroHelpDesk

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="EmailInput"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" name="Imagem" id="Imagem" type="file" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a role="button" class="BtnVerificacao btn btn-outline-info">Criar</a>
            </div>
        </form>
    </div>
</div>

<div class="modal" id="ModalVerificacao" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Verificar Codigo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="Verificacao">
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/jquery.inputmask.js"></script>
    <script>
        $(document).ready(function () {
            $('.BtnVerificacao').click(function () {
                var email = $('#EmailInput').val();
                window.emailTemporario = email;
                enviarEmail();
                abrirModalVerificacao()
            });

            function enviarEmail() {
                var emailTemporario = window.emailTemporario;
                $.ajax({
                    type: 'POST',
                    url: '/CadastroHelpDesk/EnviarEmail',
                    data: { email: emailTemporario },
                    success: function (result) {
                        abrirModalVerificacao();
                    },
                    error: function () {
                        return false;
                    }
                });
            }

            function abrirModalVerificacao() {
                var emailTemporario = window.emailTemporario;
                $.ajax({
                    type: 'POST',
                    url: '/CadastroHelpDesk/VerificacaoPartialView',
                    data: { email: emailTemporario },
                    success: function (result) {
                        $('#ModalVerificacao').modal('show');
                        $("#Verificacao").html(result);
                    },
                    error: function () {
                        return false;
                    }
                });
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

