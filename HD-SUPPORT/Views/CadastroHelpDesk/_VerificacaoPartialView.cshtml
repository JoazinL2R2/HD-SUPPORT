<form asp-action="VerificacaoEmail" asp-controller="CadastroHelpDesk" method="post">
    <h1>Verifique o seu email</h1><br />

    <input type="text" placeholder="Digite o código" />

    <a role="button" class="btn btn-outline-success btnVerificar">Verificar</a>
    <a role="button" class="btn btn-outline-info btnEnviarNovamente" asp-action="EnviarEmail" asp-controller="CadastroHelpDesk">Enviar Novamente</a>
</form>

<div class="modal fade" id="Modelsucesso" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sucesso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" asp-action="Login" asp-controller="CadastroHelpDesk"></button>
            </div>
            <div class="modal-body">
                <div class="Modelsucesso">
                    <p>@TempData["sucessoAtualizacao"]</p>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModelErro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Erro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="ModelErro">
                    <p>@TempData["ErroAtualizacao"]</p>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.inputmask.js"></script>
    <script>

            var erroAtualizacao = "@TempData["ErroAtualizacao"]";
            var sucessoAtualizacao = "@TempData["sucessoAtualizacao"]";
            if (erroAtualizacao) {
                setTimeout(function () {
                    $('#ModelErro').modal('show');
                }, 100);
            }
            else{
                setTimeout(function () {
                    $('#Modelsucesso').modal('show');
                }, 100);
            }

            $('.btnEnviarNovamente').click(function () {
                EnviarNovamente();
            });

            function EnviarNovamente() {
                $.ajax({
                    type: 'GET',
                    url: '/CadastroHelpDesk/EnviarEmail',
                    success: function (result) {
                        $('#ModalEnviarNovamente').modal('show');
                    }
                });
            }
        });
    </script>
}