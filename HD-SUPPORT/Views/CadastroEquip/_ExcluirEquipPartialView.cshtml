@model HD_SUPPORT.Models.CadastroEquip

<div class="modal fade" id="@("DeleteEquipModal"+Model.Id.ToString())" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Excluir">
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <h5>Você realmente deseja excluir?</h5>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close"> Cancelar</button>
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </form>
                
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
