@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Acessor

@model IEnumerable<HD_SUPPORT.Models.CadastroEquip>

@{
    ViewData["Title"] = "Maquinas";
}
@section Header {
    <header>
        <div class="logo_bne">
            <h1>Help Desk</h1>
        </div>
       <div class="conjunto">
           <div class="dropDownHeader">
              <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" >
                Tabelas
              </button>
              <ul class="dropdown-menu dropdown-menu-dark">
                    @if (Acessor.HttpContext.Session.GetString("profissional") == "HelpDesk")
                    {
                        <li style="color:#0169fd;"><a class="dropdown-item active" asp-controller="Emprestimo" asp-action="Index" style="color:#0169fd;">Emprestimos</a></li>
                    }
                    <li style="color:#0169fd;"><a class="dropdown-item" asp-controller="CadastroEquip" asp-action="Index" style="color:#0169fd;">Equipamentos</a></li>
                    <li style="color:#0169fd;"><a class="dropdown-item" asp-controller="CadastroFunc" asp-action="Index"  style="color:#0169fd;">Funcionários</a></li>
              </ul>
            </div>

            <div class="perfil">
                @if (Acessor.HttpContext.Session.GetString("nome") != null)
                {
                    <a class="dropdown-item" asp-area="" asp-controller="CadastroHelpDesk" asp-action="Perfil">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Acessor.HttpContext.Session.Get("foto"))" style="border-radius: 50%; position: relative; right: 10px;" width="30" height="30">
                        @Acessor.HttpContext.Session.GetString("nome")
                    </a>
                }
            </div>
        </div>
    </header>

}
<head>
    <link rel="stylesheet" href="~/css/Modals.css" />
    <link rel="stylesheet" href="~/css/Tebela.css" />
    <link rel="stylesheet" href="~/css/video.css" />
</head>

<style>



    .button-add button{
        background-color: #0169fd;
        color: white;
        border: none;
        border: 1px solid white;
        padding: 5px;
        width: 80%;
        border-radius: 10px;
        cursor: pointer;
        transition: ease all 0.3s;
    }

    .button-add button:hover{
        background-color: white;
        color: #0169fd;
       
    }

</style>
<div class="content-stars">
    <video src="~/images/pexels_videos_2792967 (1440p).mp4" autoplay loop muted></video>
</div>
<div class="align-content-center">
    <div class="content-tabela">
        <div class="table-menu">

            <div class="search-div" id="">
                <form asp-action="Index" class="form" asp-controller="CadastroEquip">

                    <a role="button">
                        <i class="bi bi-search"></i>
                    </a>
                    <input class="input" placeholder="Faça sua pesquisa" required="" type="text">
                    <button class="reset" type="reset">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                    <select id="combo-box" name="disponivel">
                        <option value="2">
                            Ambos
                        </option>
                        <option value="1">
                            Dísponivel
                        </option>
                        <option value="0">
                            Indisponível
                        </option>
                    </select>

                </form>
            </div>


        </div>
        <div class="table-forms">
            <table id="table-position" class="table">
                <thead class="thead-style">
                    <tr>
                        <th>
                            Id do patrimônio
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Modelo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Processador)
                        </th>
                        <th>
                            Sistema Operacional
                        </th>
                        <th>
                            Disponível
                        </th>

                        <th scope="col">
                            <div class="button-add">
                                <button type="button" class="bntAdicionar" style="">
                                    Adicionar
                                </button>
                            </div>

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="tbody-style">
                            <td>
                                @Html.DisplayFor(modelItem => item.IdPatrimonio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Processador)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SistemaOperacionar)
                            </td>
                            <td>
                                @if (item.Disponivel)
                                {
                                    <text>Disponível</text>
                                }
                                else
                                {
                                    <text>Indisponível</text>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">


                                    <button type="button" Equipamento-id="@item.Id" class="btn btn-primary BtnEditar">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>



                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="@("#DetalhesEquipModal" + item.Id.ToString())" data-bs-url="@Url.Action($"Detalhes/{item.Id}")">
                                        <i class="bi bi-newspaper"></i>
                                    </button>

                                    @await Html.PartialAsync("_DetalhesEquipPartialView", item)

                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#DeleteEquipModal" + item.Id.ToString())" data-bs-url="@Url.Action($"Delete/{item.Id}")">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>

                                    @if (Acessor.HttpContext.Session.GetString("profissional") == "HelpDesk")
                                    {
                                        @await Html.PartialAsync("_ExcluirEquipPartialView", item)
                                        ;
                                    }

                                </div>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>



        <div class="pagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (TempData["paginaAtual"] != null)
                    {
                        var pagina = Convert.ToInt32(TempData["paginaAtual"]);

                        <form asp-action="Index" asp-controller="CadastroEquip">
                            <input hidden name="searchString" value="@TempData["pesquisa"]">
                            <input hidden name="disponivel" value="@TempData["disponivel"]">
                            <input hidden name="paginaAtual" value="@(pagina-1)">
                            @if (pagina != 1)
                            {
                                <button class="page-link" type="submit"><i class="bi bi-arrow-left"></i></button>
                            }
                            else
                            {
                                <a class="page-link"><i class="bi bi-arrow-left"></i></a>
                            }
                        </form>

                        <li class="page-item">
                            <form asp-action="Index" asp-controller="CadastroEquip">
                                <input hidden name="searchString" value="@TempData["pesquisa"]">
                                <input hidden name="disponivel" value="@TempData["disponivel"]">
                                <input hidden name="paginaAtual" value="1">
                                @if (pagina != 1)
                                {
                                    <button class="page-link" type="submit">1</button>
                                }
                                else
                                {
                                    <a class="page-link" style="color:black">1</a>
                                }
                            </form>
                        </li>

                        var dados = Convert.ToDouble(TempData["QuantidadeDados"]);
                        dados = Math.Ceiling(dados / 6);

                        var diferenca = 0;

                        if (pagina < 5)
                        {
                            diferenca = 5 - pagina;
                        }


                        if (pagina > dados - 5)
                        {
                            diferenca = (Convert.ToInt32(dados) - pagina) - 4;
                        }

                        for (var i = pagina - 3; i < pagina + 4; i++)
                        {
                            var pag = i + diferenca;
                            if (pag > 1 && pag < dados)
                            {
                                <li class="page-item">
                                    <form asp-action="Index" asp-controller="CadastroEquip">
                                        <input hidden name="searchString" value="@TempData["pesquisa"]">
                                        <input hidden name="disponivel" value="@TempData["disponivel"]">
                                        <input hidden name="paginaAtual" value="@pag">
                                        @if (pag != pagina)
                                        {
                                            <button class="page-link" type="submit">@pag</button>
                                        }
                                        else
                                        {
                                            <a class="page-link" style="color:black">@pag</a>
                                        }

                                    </form>
                                </li>
                            }
                        }

                        <li class="page-item">
                            <form asp-action="Index" asp-controller="CadastroEquip">
                                <input hidden name="searchString" value="@TempData["pesquisa"]">
                                <input hidden name="disponivel" value="@TempData["disponivel"]">
                                <input hidden name="paginaAtual" value="@dados">
                                @if (dados != pagina)
                                {
                                    <button class="page-link" type="submit">@dados</button>
                                }
                                else
                                {
                                    <a class="page-link" style="color:black">@dados</a>
                                }
                            </form>
                        </li>

                        <form asp-action="Index" asp-controller="CadastroEquip">
                            <input hidden name="searchString" value="@TempData["pesquisa"]">
                            <input hidden name="disponivel" value="@TempData["disponivel"]">
                            <input hidden name="paginaAtual" value="@(pagina+1)">
                            @if (pagina != dados)
                            {
                                <button class="page-link" type="submit"><i class="bi bi-arrow-right"></i></button>
                            }
                            else
                            {
                                <a class="page-link"><i class="bi bi-arrow-right"></i></a>
                            }
                        </form>
                    }
                </ul>
            </nav>
        </div>

        <div class="qnt-func">
            <p style="color:gray">Mostrando @TempData["QuantidadeDadosTabela"] de @TempData["QuantidadeDados"] Equipamentos</p>
        </div>
        <div class="modal fade" id="ModelErro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Erro</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="ModelErro">
                            <p>@TempData["ErroAtualizacao"]</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="ModelErro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Erro</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="ModelErro">
                            <p>@TempData["ErroAtualizacao"]</p>
                        </div>
                    </div>
                    <div class="modal-footer">


                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="EditarEquipModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar partrimonio</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="EditModal">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="NovoEquipModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Adicionar Maquina</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="NovaMaquina">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/jquery.inputmask.js"></script>
        <script>
            $(document).ready(function () {
                var erroAtualizacao = "@TempData["ErroAtualizacao"]";

                if (erroAtualizacao) {
                    setTimeout(function () {
                        $('#ModelErro').modal('show');
                    }, 100);
                }
                if ("@Acessor.HttpContext.Session.GetString("profissional")" == "HelpDesk") { 
                    $('.BtnEditar').click(function () {
                        var equipamentoId = $(this).attr('Equipamento-id');
                        $.ajax({
                            type: 'GET',
                            url: '/CadastroEquip/Edit/' + equipamentoId,
                            success: function (result) {
                                $("#EditModal").html(result);
                                $('#EditarEquipModal').modal('show');
                            }
                        })
                    });
                    $('.bntAdicionar').click(function () {
                        $.ajax({
                            type: 'GET',
                            url: '/CadastroEquip/NovoCadastro',
                            success: function (result) {
                                $("#NovaMaquina").html(result);
                                $('#NovoEquipModal').modal('show');
                            }
                        })
                    });
                }
            });
        </script>
    }







