@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Acessor

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HD_SUPPORT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HD_SUPPORT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Nunito&family=Questrial&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="logo_bne">
            <img src="images/logo_bne.png" alt="">
        </div>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Tabelas
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Emprestimo" asp-action="Index">Tabela Emprestimos</a></li>
                <li><a class="dropdown-item" asp-controller="CadastroEquip" asp-action="Index">Tabela Equipamentos</a></li>
                <li><a class="dropdown-item" asp-controller="CadastroFunc" asp-action="Index">Tabela Funcionarios</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut">Sair</a></li>
            </ul>
        </div>
        <div class="icon_menu">
            <img src="images/menu_icon.png" alt="">
        </div>
        <div>
            @if (Acessor.HttpContext.Session.GetString("nome") != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Acessor.HttpContext.Session.Get("foto"))" width="50" height="50">
                @Acessor.HttpContext.Session.GetString("nome")
                
            }
        </div>
        
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.inputmask.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>