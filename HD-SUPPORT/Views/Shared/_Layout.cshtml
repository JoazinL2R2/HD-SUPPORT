@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Acessor

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HD_SUPPORT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HD_SUPPORT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Nunito&family=Questrial&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <header>
            <h1>
                <span style="font-family: Arial, Helvetica, sans-serif; color:  rgb(0, 0, 0);">
                    employer

                </span>
                <span style="font-weight: 600; font-size: 40px; color:  rgb(0, 0, 0);">
                    |
                </span>

            </h1>
            <div class="logo-img">
                <img src="images/hd-support-logo.png" height="30px" alt="">
            </div>
            <span>
                <div class="links d-flex">
                    <a class="nav-link text-dark" asp-area="" asp-controller="CadastroFunc" asp-action="Index">Cadastros</a>
                    @if (Acessor.HttpContext.Session.GetString("nome") == null)
                    {
                        
                        <a class="nav-link text-dark" asp-area="" asp-controller="CadastroHelpDesk" asp-action="Login">Entrar</a>
                    }
                </div>
            </span>
           
            <div>
                @if (Acessor.HttpContext.Session.GetString("nome") != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Acessor.HttpContext.Session.Get("foto"))" width="50" height="50">
                    @Acessor.HttpContext.Session.GetString("nome")
                    <a asp-area="" asp-controller="CadastroHelpDesk" asp-action="Login">Sair</a>
                }
            </div>
        </header>
        <div class="gradient-background"></div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>